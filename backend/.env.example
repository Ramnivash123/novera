# Application Settings
APP_NAME=Mentanova AI Knowledge Assistant
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development
API_V1_PREFIX=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Configuration
DATABASE_URL=postgresql+asyncpg://mentanova_user:12345678@localhost:5432/mentanova_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# PostgreSQL Direct Connection (for pgvector operations)
POSTGRES_USER=mentanova_user
POSTGRES_PASSWORD=your_password
POSTGRES_DB=mentanova_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600  # 1 hour in seconds

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_EMBEDDING_DIMENSIONS=1536
OPENAI_CHAT_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=128000

# Cohere Configuration (for reranking)
COHERE_API_KEY=jqQp6XyKjvg6W28HChe8PVwhawhNKs2cXovkG437
COHERE_RERANK_MODEL=rerank-english-v3.0

# JWT Authentication
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Document Processing Configuration
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,docx,doc,txt,xlsx,xls
UPLOAD_DIR=./data/uploads
PROCESSED_DIR=./data/processed

# Chunking Configuration
CHUNK_SIZE=800  # tokens
CHUNK_OVERLAP=150  # tokens
MAX_TABLE_TOKENS=2000
MIN_CHUNK_SIZE=100

# Retrieval Configuration
RETRIEVAL_TOP_K=20
RERANK_TOP_K=8
SIMILARITY_THRESHOLD=0.7
HYBRID_ALPHA=0.7  # Weight for semantic vs keyword search

# Generation Configuration
MAX_CONTEXT_TOKENS=12000
TEMPERATURE=0.1  # Low temperature for factual responses
MAX_RESPONSE_TOKENS=1000

# Guardrails Configuration
ENABLE_INPUT_GUARDRAILS=True
ENABLE_OUTPUT_GUARDRAILS=True
HALLUCINATION_THRESHOLD=0.3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/mentanova.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=True

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds